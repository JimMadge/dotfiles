[alias]
    tree = log --graph
    stat = diff --stat
    tracked = ls-tree -r HEAD --name-only
    sb = status -sb
[color]
    ui = true
[commit]
    gpgSign = True
[core]
    editor = vim
[merge]
    tool = vimdiff
[pull]
    ff = only
[push]
    default = simple
