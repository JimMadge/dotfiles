[alias]
    tree = log --graph
    stat = diff --stat
    tracked = ls-tree -r HEAD --name-only
    sb = status -sb
    root = rev-parse --show-toplevel
[color]
    ui = true
[commit]
    gpgSign = True
[core]
    editor = vim
    excludesfile = ~/.gitignore
[init]
    defaultBranch = main
[merge]
    tool = vimdiff
[pull]
    ff = only
[push]
    default = simple
[user]
    email = jim@jmadge.com
    name = Jim Madge
    ; signingKey =
